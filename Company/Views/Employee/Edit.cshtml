@model Company.Models.Employee

<!DOCTYPE html>

<html>
<head>
    <link href="~/BootStrap/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <div> 
        <form method="post" action="/Employee/Edit">

            <input type="hidden" value="@Model.EmployeeID" name="EmployeeID" />
            <div>
                <label for="EmployeeName">Employee Name:</label>
                <input type="text" class="form-control" value="@Model.EmployeeName" name="EmployeeName"/>
            </div>

            <div>
                <label for="EmployeeAge">Employee Age:</label>
                <input type="text" class="form-control" value="@Model.EmployeeAge" name="EmployeeAge"/>
            </div>

            <div>
                <label for="EmployeeSalary">Employee Salary:</label>
                <input type="text" class="form-control" value="@Model.EmployeeSalary" name="EmployeeSalary"/>
            </div>

            <div>
                <label for="DepartmentID">Department ID:</label>
                <input type="text" class="form-control" value="@Model.DepartmentID" name="DepartmentID"/>
            </div>
            <br />
            <br />
            <input type="submit" value="Edit" />
        </form>

    </div>
</body>
</html>
